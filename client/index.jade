doctype 5
html(lang="fr")
    head
        title Plugy
    body
        h1 PlugDB app
        p
            | Status PlugDB : 
            strong(id="status") #{status}
        hr
        br
        form(action="init")
            input(type="submit", value="Start PlugDB" onclick='updateStatus("Initialization...")')
            - if(msgInit) { 
                p.
                    Status : #{msgInit} 
            - }
        br


        form(action="insert")
            p Generate n Docs and insert the ids in PlugDB : 
            input(type="text" name="nDocs" size="5")
            input(type="submit", value="Generate") 
            - if(msgInsert) { 
                p.
                    Insertion : #{msgInsert} 
            - }
        br
        br

        form(action="close")
            input(type="submit", value="Close PlugDB" onclick='updateStatus("Closing plugDB...")')
            - if(msgClose) { 
                p.
                    Status close : #{msgClose} 
            - }


script.
    function updateStatus(status) { document.getElementById('status').innerHTML = status }
